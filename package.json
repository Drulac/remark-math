{
  "name": "remark-math",
  "private": true,
  "description": "Math Inline and Block supporting for Remark",
  "scripts": {
    "postinstall": "lerna bootstrap --no-ci",
    "test": "jest --coverage",
    "test:api": "jest",
    "test:watch": "jest --watch",
    "pretest": "npm run lint --silent",
    "lint": "standard --fix",
    "demo:webpack": "webpack-dev-server --config examples/webpack/webpack.config.js",
    "demo:nodejs": "node examples/nodejs/process.js",
    "release": "lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rokt33r/remark-math.git"
  },
  "keywords": [
    "markdown",
    "remark",
    "math",
    "katex",
    "latex",
    "tex"
  ],
  "author": "Junyoung Choi <fluke8259@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rokt33r/remark-math/issues"
  },
  "homepage": "https://github.com/Rokt33r/remark-math#readme",
  "devDependencies": {
    "babel-eslint": "^10.0.0",
    "css-loader": "^3.0.0",
    "eslint-plugin-jest": "^22.0.0",
    "file-loader": "^4.0.0",
    "github-markdown-css": "^3.0.0",
    "hastscript": "^5.0.0",
    "jest": "^24.0.0",
    "katex": "^0.10.0",
    "lerna": "^3.0.0",
    "rehype-parse": "^6.0.0",
    "rehype-stringify": "^6.0.0",
    "remark-html": "^10.0.0",
    "remark-parse": "^7.0.0",
    "remark-rehype": "^5.0.0",
    "remark-stringify": "^7.0.0",
    "standard": "^13.0.0",
    "style-loader": "^1.0.0",
    "unified": "^8.0.0",
    "unist-builder": "^1.0.0",
    "webpack": "^4.0.0",
    "webpack-cli": "^3.0.0",
    "webpack-dev-server": "^3.0.0"
  },
  "dependencies": {},
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "jest"
    ],
    "envs": [
      "jest"
    ]
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "packages/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
