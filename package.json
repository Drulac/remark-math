{
  "name": "remark-math",
  "description": "Math Inline and Block supporting for Remark",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "test": "jest --coverage",
    "test:api": "jest",
    "test:watch": "jest --watch",
    "posttest": "npm run lint --silent",
    "lint": "standard",
    "demo:webpack": "webpack-dev-server --config examples/webpack/webpack.config.js",
    "demo:nodejs": "node examples/nodejs/process.js",
    "release": "lerna publish --skip-git"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rokt33r/remark-math.git"
  },
  "keywords": [
    "markdown",
    "remark",
    "math",
    "katex",
    "latex",
    "tex"
  ],
  "author": "Junyoung Choi <fluke8259@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rokt33r/remark-math/issues"
  },
  "homepage": "https://github.com/Rokt33r/remark-math#readme",
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "css-loader": "^0.26.1",
    "eslint-plugin-jest": "^1.0.2",
    "file-loader": "^0.10.0",
    "github-markdown-css": "^2.4.1",
    "jest": "^19.0.2",
    "katex": "^0.7.1",
    "lerna": "2.0.0-beta.37",
    "rehype": "^3.0.0",
    "rehype-parse": "^3.0.0",
    "rehype-stringify": "^3.0.0",
    "remark-html": "^6.0.0",
    "remark-parse": "^3.0.0",
    "remark-rehype": "^2.0.0",
    "remark-stringify": "^3.0.0",
    "standard": "^8.6.0",
    "style-loader": "^0.13.1",
    "unified": "^6.1.1",
    "unist-builder": "^1.0.2",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "dependencies": {},
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "jest"
    ],
    "envs": [
      "jest"
    ]
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "packages/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
